<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ultra_viewpager_rl"
    android:background="@drawable/council_background"
    android:backgroundTint="@color/golden"
    android:layout_gravity="center_vertical"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/council_warden_desgn"
        android:hint="Designation"
        android:minHeight="70dp"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/council_warden_pic"
        android:layout_below="@id/council_warden_desgn"
        android:background="@color/green"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/council_warden_name"
        android:layout_below="@id/council_warden_pic"
        android:hint="Name"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:background="@color/detail_color"
        android:gravity="center"
        android:textColor="@color/white"/>

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/council_warden_phone"
        android:background="@color/fui_transparent"
        android:src="@drawable/icon_call"
        android:layout_below="@id/council_warden_name"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:scaleType="fitCenter"
        android:layout_marginStart="50dp"
        />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/council_warden_email"
        android:background="@color/fui_transparent"
        android:src="@drawable/icon_gmail"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:layout_below="@id/council_warden_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        />
</RelativeLayout>
