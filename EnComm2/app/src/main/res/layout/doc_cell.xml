<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    >

    <ImageView
        android:id="@+id/doc_type"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:src="@drawable/icon_image"
        android:fadingEdge="horizontal"
        android:requiresFadingEdge="horizontal"
        android:layout_gravity="center_vertical|start"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/doc_topic"
        android:layout_toEndOf="@id/doc_type"
        android:text="Topic"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"

        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/doc_sub_topic"
        android:layout_toEndOf="@id/doc_type"
        android:layout_below="@id/doc_topic"
        android:text="Sub Topic"
        android:textColor="@color/light_black"
        android:textStyle="normal"
        android:textSize="20sp"
        android:layout_marginStart="10dp"

        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/doc_download"
        android:src="@drawable/icon_download"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/grey"
        android:layout_below="@id/doc_sub_topic"
        android:layout_marginTop="10dp"
        />
</RelativeLayout>
