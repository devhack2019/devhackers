<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ultra_viewpager_rl"
    android:background="@drawable/bg"

    android:backgroundTint="@color/golden"
    android:layout_gravity="center_vertical"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/council_warden_desgn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/council_background"
        android:gravity="center"
        android:hint="Designation"
        android:minHeight="70dp"
        android:padding="8dp"
        android:text="Entrepreneur"
        android:textColor="@color/hockeyapp_text_black"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />




    <TextView
        android:id="@+id/details_time2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/details_username2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="-154dp"
        android:layout_marginEnd="14dp"
        android:gravity="center"
        android:text="4:15am"
        android:textColor="@color/light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_type2"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:gravity="start|center_vertical"
        android:text="Looking for good Ideas in CNN and RNNs technologies"
        android:textColor="@color/light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_email2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/details_username2"
        android:gravity="start|center_vertical"
        android:text="      170010011@iitdh.ac.in"
        android:textColor="@color/green"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_date2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/details_username2"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-154dp"
        android:layout_marginStart="23dp"
        android:gravity="center"
        android:text="13 Jan 2019"
        android:textColor="@color/light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_username2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="154dp"
        android:gravity="start|center_vertical"
        android:text="      Aditya Jha"
        android:textColor="@color/light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/details_title2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/council_warden_desgn"
        android:gravity="center_horizontal"
        android:text="Artificial Intelligence"
        android:textColor="@color/black"
        android:textSize="22sp" />

    <ImageButton
        android:id="@+id/council_warden_phone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/council_warden_email"
        android:layout_marginStart="38dp"
        android:background="@color/fui_transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_call" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/council_warden_email"
        android:background="@color/fui_transparent"
        android:src="@drawable/icon_gmail"
        android:layout_marginTop="15dp"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        />
</RelativeLayout>
